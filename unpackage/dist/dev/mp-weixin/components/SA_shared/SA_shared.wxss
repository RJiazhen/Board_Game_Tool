/* 水平间距 */
.shared {
  display: flex;
  justify-content: space-between;
}
.shared.active {
  background-color: #f7e887;
}
.shared .area-title {
  font-size: 30px;
}
.shared .sakura-token-count {
  font-size: 40px;
}
.shared .sakura-token-limit {
  font-size: 10px;
}
.shared .distance {
  width: 33%;
  position: relative;
  border-radius: 20px;
  box-shadow: 7px 7px 12px rgba(0, 0, 0, 0.4), -7px -7px 12px rgba(255, 255, 255, 0.9);
  background-color: #fff;
  overflow: hidden;
  transition: 0.5s all;
}
.shared .distance.active {
  background-color: #f7e887;
}
.shared .distance .for-player1 {
  position: absolute;
  left: 5%;
  top: 3%;
  transform: rotate(180deg);
}
.shared .distance .for-player2 {
  position: absolute;
  right: 5%;
  bottom: 3%;
}
.shared .shadow-container {
  width: 33%;
  position: relative;
}
.shared .shadow-container.active {
  background-color: #f7e887;
}
.shared .shadow-container .right-shadow {
  position: absolute;
  right: 5%;
  bottom: 3%;
}
.shared .shadow-container .left-shadow {
  position: absolute;
  left: 5%;
  top: 3%;
  rotate: 180deg;
}